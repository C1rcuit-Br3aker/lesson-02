<div class="content__container">
  <form class="content" {{action saveImage url caption on="submit"}}>
    <div class="content-inputs">
      {{input class="input-new" type="text" value=url placeholder="Image URL"}}
      {{textarea class="input-new" value=caption placeholder="Image Caption"}}
    </div>
    <div class="content-buttons">
      {{#link-to 'index'}}
      <button class="form-buttons">Cancel</button>
      {{/link-to}}
      <button class="form-buttons add-image">Add Image</button>
    </div>
  </form>

</div>
